{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES6",
    "module": "NodeNext",  
    "moduleResolution": "nodenext",  
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts", "src/controllers"]
}
